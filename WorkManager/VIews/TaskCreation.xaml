<Window x:Class="WorkManager.VIews.TaskCreation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkManager.VIews"
        mc:Ignorable="d"
        Title="Tasks" Height="450" Width="800">
    <Grid Margin="0,0,2,-3">
        <ListView HorizontalAlignment="Left" Height="191" Margin="10,218,0,0" VerticalAlignment="Top" Width="772">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" Width="130"/>
                    <GridViewColumn Header="Description" Width="520"/>
                    <GridViewColumn Header="Due Date" Width="115"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!--ADD button-->
        <Button 
            x:Name="AddTaskButton" 
            Content="ADD" 
            HorizontalAlignment="Left" 
            Margin="663,75,0,0" 
            VerticalAlignment="Top" 
            Width="107" 
            Height="83" 
            FontSize="40" Click="AddTaskButton_Click"/>

        <!--Title TextBox-->
        <TextBox 
            x:Name="AddTitle"
            HorizontalAlignment="Left" 
            Height="83" 
            Margin="20,34,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="119" 
            RenderTransformOrigin="-0.004,0.507"/>

        <!--Description TextBox-->
        <TextBox 
            x:Name="AddDescription"
            HorizontalAlignment="Left" 
            Height="163" 
            Margin="159,34,0,0" 
            TextWrapping="Wrap"  
            VerticalAlignment="Top" 
            Width="298" 
            RenderTransformOrigin="-0.004,0.507"/>

        <!--Due date calendar-->
        <Calendar
            x:Name="DueDateCalendar"
            HorizontalAlignment="Left" 
            Margin="478,31,0,0" 
            VerticalAlignment="Top" 
            Height="171" 
            Width="168"/>

        <!--Top Box labels-->
        <Label Content="Title" HorizontalAlignment="Left" Margin="20,13,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.365,0.701"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="159,13,0,0" VerticalAlignment="Top"/>
        <Label Content="Due date" HorizontalAlignment="Left" Margin="478,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.362,0.44"/>

        <!--List label-->
        <Label Content="Existing Tasks" HorizontalAlignment="Left" Margin="10,192,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.523,1.542"/>


    </Grid>
</Window>
